<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rspkumobile.drawer.Home">

    <TextView
        android:id="@+id/frame_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="Pelayanan"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/more_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/frame_tips_title"
        android:padding="5dp"
        android:text="LEBIH" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tip_list"
        android:layout_below="@+id/frame_tips_title">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>